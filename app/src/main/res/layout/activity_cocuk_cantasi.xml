<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CocukCantasiActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/arkaplanrengi">

    <TextView
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Çocuk Çantası Sayfası"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/buttonBebekBezi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Bebek Bezi" />

    <Button
        android:id="@+id/buttonBebekMamasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Bebek Maması" />

    <Button
        android:id="@+id/buttonEmzik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Emzik" />

    <Button
        android:id="@+id/buttonBiberon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Biberon" />

    <Button
        android:id="@+id/buttonIslakMendil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Islak Mendil" />

</LinearLayout>