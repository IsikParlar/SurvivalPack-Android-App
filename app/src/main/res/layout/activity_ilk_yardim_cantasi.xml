<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IlkYardimCantasiActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/arkaplanrengi">

    <TextView
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İlk Yardım Çantası Sayfası"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonAgriKesici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Ağrı Kesici" />

    <Button
        android:id="@+id/buttonAspirin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Aspirin" />

    <Button
        android:id="@+id/buttonBandaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Bandaj" />

    <Button
        android:id="@+id/buttonDezenfektan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Dezenfektan" />

    <Button
        android:id="@+id/buttonGazliBez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Gazlı Bez" />

    <Button
        android:id="@+id/buttonIslakMendil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Islak Mendil" />

    <Button
        android:id="@+id/buttonIlac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="İlaç" />

    <Button
        android:id="@+id/buttonTenturdiyot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Tentürdiyot" />

    <Button
        android:id="@+id/buttonYaraBandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_tasarim"
        android:text="Yara Bandı" />

</LinearLayout>